<h1 class="mb-2 mt-4"><%= article.title %></h1>
<div class="text-muted">
    <%= article.createdAt.toLocaleDateString() %>
</div>
<div class="text-muted mb-3">
    Author : <%= article.author %>
</div>
<a href="/" class="btn btn-secondary">All Articles</a>
<a href="/edit/<%= article.id %>" class="btn btn-info">Edit</a>
<a href="/delete/<%= article.id %>" class="btn btn-danger">Delete</a>

<div class="mt-3 mb-3">
    <%= article.description %>
</div>